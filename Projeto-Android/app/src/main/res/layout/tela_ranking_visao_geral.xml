<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detalhes_equipe"
    tools:context=".TelaRankingVisaoGeralActivity">

    <TextView
        android:id="@+id/nome_equipe_geral_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="567dp"
        android:fontFamily="monospace"
        android:text="@string/nomeEquipeTXT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_investido_id"
        android:layout_width="152dp"
        android:layout_height="23dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:text="R$ 00.00"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_equipe_geral_id" />

    <TextView
        android:id="@+id/media_votos_geral_id"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_investido_id" />

    <TextView
        android:id="@+id/posicao_ranking_id"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:text="1"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/media_votos_geral_id" />

    <TextView
        android:id="@+id/maior_investidor_id"
        android:layout_width="109dp"
        android:layout_height="41dp"
        android:layout_marginStart="222dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:text="NOME PESSOAS"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posicao_ranking_id" />
</androidx.constraintlayout.widget.ConstraintLayout>