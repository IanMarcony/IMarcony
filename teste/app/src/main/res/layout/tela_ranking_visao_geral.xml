<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detalhes_equipe"
    tools:context=".TelaRankingVisaoGeralActivity">

    <TextView
        android:id="@+id/nome_equipe_geral_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="567dp"
        android:fontFamily="monospace"
        android:text="@string/nomeEquipeTXT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_investido_id"
        android:layout_width="152dp"
        android:layout_height="23dp"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="132dp"
        android:text="@string/r_00_00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/media_votos_geral_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_equipe_geral_id" />

    <TextView
        android:id="@+id/media_votos_geral_id"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:layout_marginBottom="52dp"
        android:text="@string/_0"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/posicao_ranking_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_investido_id" />

    <TextView
        android:id="@+id/posicao_ranking_id"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:textAlignment="textEnd"
        android:text="@string/_1"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/media_votos_geral_id" />

    <TextView
        android:id="@+id/maior_investidor_id"
        android:layout_width="109dp"
        android:layout_height="41dp"
        android:layout_marginStart="209dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="120dp"
        android:text="@string/nome_pessoas"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posicao_ranking_id"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>